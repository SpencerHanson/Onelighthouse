%h1
	OneLightHouse

%h1 
	Games
%p
	- @games.each do |game|
		%p
			.title
				= game.title
			.summary
				= game.summary	

%p
	= form_for :game, url: games_path do |f|
		%p
			=f.label :title
			%br
			= f.text_field :title
		%p
			= f.label :summary
			%br
			= f.text_area :summary
		%p
			= f.submit